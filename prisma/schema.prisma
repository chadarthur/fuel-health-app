generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts     Account[]
  sessions     Session[]
  savedRecipes SavedRecipe[]
  groceryItems GroceryItem[]
  mealEntries  MealEntry[]
  macroGoals   MacroGoal?
  whoopData    WhoopDailyData[]
  whoopToken   WhoopToken?
  chatSessions ChatSession[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SavedRecipe {
  id             String   @id @default(cuid())
  userId         String
  spoonacularId  Int?
  title          String
  image          String?
  summary        String?
  sourceUrl      String?
  readyInMinutes Int?
  servings       Int?
  instructions   String?
  ingredients    String
  nutrition      String
  cuisines       String?
  diets          String?
  isAiGenerated  Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([spoonacularId])
}

model GroceryItem {
  id          String   @id @default(cuid())
  userId      String
  name        String
  quantity    Float?
  unit        String?
  category    String   @default("Other")
  checked     Boolean  @default(false)
  recipeId    String?
  recipeTitle String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
}

model MealEntry {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  mealType    String   @default("snack")
  calories    Float
  protein     Float
  carbs       Float
  fat         Float
  fiber       Float?
  sugar       Float?
  imageUrl    String?
  source      String   @default("manual")
  confidence  Float?
  loggedAt    DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([loggedAt])
  @@index([userId, loggedAt])
}

model MacroGoal {
  id        String   @id @default(cuid())
  userId    String   @unique
  calories  Float    @default(2000)
  protein   Float    @default(150)
  carbs     Float    @default(250)
  fat       Float    @default(65)
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WhoopToken {
  id           String   @id @default(cuid())
  userId       String   @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  scope        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WhoopDailyData {
  id             String   @id @default(cuid())
  userId         String
  date           DateTime
  recoveryScore  Float?
  hrvRmssd       Float?
  restingHr      Float?
  strainScore    Float?
  sleepScore     Float?
  sleepHours     Float?
  caloriesBurned Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model ChatSession {
  id        String   @id @default(cuid())
  userId    String
  messages  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
